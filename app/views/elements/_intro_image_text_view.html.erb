<div class="intro_image_text" id="<%= element_dom_id(element) %>" <%= element_preview_code(element) -%>>
    <div class="headline">
        <%= render_essence_view_by_name(element, 'headline') %>
    </div>
    <div class="intro_image_text_images">
        <%- element.contents.find_all_by_essence_type("EssencePicture").each do |content| -%>
        <div class="intro_image_text_image <%= content.essence.css_class %>">
            <%= render_essence_view(content, :image_size => "160x120") %>
        </div>
        <%- end -%>
    </div>
    <div class="text">
        <%= render_essence_view_by_name(element, 'text') %>
    </div>
</div>
